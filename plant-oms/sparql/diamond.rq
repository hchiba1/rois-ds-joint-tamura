#!/usr/bin/env spang2
# @endpoint plant
# @param gene=815275
# @param targetTaxon=3847
# @option -a

PREFIX taxid: <http://identifiers.org/taxonomy/>
PREFIX ncbigene: <http://identifiers.org/ncbigene/>
PREFIX plant: <https://plant-oms.dbcls.jp/ontology#>

SELECT ?gene ?score
WHERE {
  ?s plant:targetTaxon taxid:${targetTaxon} ;
     plant:queryGene ncbigene:${gene} ;
     plant:targetGene ?gene ;
     plant:score ?score .
}
ORDER BY DESC(?score)
